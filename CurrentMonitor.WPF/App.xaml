                <ResourceDictionary Source="Styles/PanelStyle.xaml"/>
                <ResourceDictionary Source="Styles/TextBlockStyle.xaml"/>
                <ResourceDictionary Source="Styles/TimeIndicatorTextBlockStyle.xaml"/>
                <ResourceDictionary Source="Styles/WindowStyle.xaml"/>
                <ResourceDictionary Source="ControlTemplates/BooleanIndicator.xaml"/>
                <ResourceDictionary Source="ControlTemplates/HamburgerCrossToggleButton.xaml"/>
                <ResourceDictionary Source="ControlTemplates/DescriptiveLabel.xaml"/>
                <ResourceDictionary Source="ControlTemplates/HamburgerCrossToggleButton.xaml"/>
                <ResourceDictionary Source="ControlTemplates/SliderToggleButton.xaml"/>
                <ResourceDictionary Source="/Resources/Icons/MonitorIcon.xaml"/>
                <ResourceDictionary Source="/Resources/Icons/CogIcon.xaml"/>
                <ResourceDictionary Source="/Resources/Icons/WindowButtonIcons.xaml"/>
                <ResourceDictionary Source="/Resources/Icons/BRELogo.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    
</Application>
